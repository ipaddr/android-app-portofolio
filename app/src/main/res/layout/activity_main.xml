<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="id.ipaddr.myappportofolio.MainActivity">

        <TextView style="@style/MainActivityTextViewBase" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <Button
                style="@style/MainActicivityButtonBase"
                android:onClick="onButtonClicked"
                android:text="@string/popular_movie" />

        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <Button
                style="@style/MainActicivityButtonBase"
                android:onClick="onButtonClicked"
                android:text="@string/stock_hawk" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <Button
                style="@style/MainActicivityButtonBase"
                android:onClick="onButtonClicked"
                android:text="@string/build_it_bigger" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <Button
                style="@style/MainActicivityButtonBase"
                android:onClick="onButtonClicked"
                android:text="@string/make_your_app_material" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <Button
                style="@style/MainActicivityButtonBase"
                android:onClick="onButtonClicked"
                android:text="@string/go_ubiquitos" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <Button
                style="@style/MainActicivityButtonBase"
                android:onClick="onButtonClicked"
                android:text="@string/capstone" />
        </FrameLayout>

    </LinearLayout>
</ScrollView>